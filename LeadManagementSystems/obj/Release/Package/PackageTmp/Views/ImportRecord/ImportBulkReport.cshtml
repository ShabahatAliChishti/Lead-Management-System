            });



            //add customer button event
            $("#btnuploadfile").click(function (e) {
                $.get("http://ipinfo.io", function (response) {
                    console.log(response);
                }, "jsonp");
                e.preventDefault();
                var form = $("#employeeform")[0];

                var file = $("#uploadreportfile").get(0).files;
                if (file.length > 0) {

                    console.log(file);
                    var formdata = new FormData(form);
                    formdata.append("ExcelFileReport", file[0]);
                    console.log(formdata)
                    $.validator.unobtrusive.parse(form);
                    if ($(form).valid()) {
                        $("#filecontents").hide();
                        $("#imageloader").show();
                        $.ajax({
                            type: "POST",
                            url: "/ImportRecord/UploadReport",
                            data: formdata,
                            contentType: false,
                            processData: false,

                            success: function (res) {
                                console.log(res);
                                if (res.code == "200") {
                                    Command: toastr["success"]("", "Added Successfuly")

                                    toastr.options = {
                                        "closeButton": false,
                                        "debug": false,
                                        "newestOnTop": false,
                                        "progressBar": true,
                                        "positionClass": "toast-top-center",
                                        "preventDuplicates": false,
                                        "onclick": null,
                                        "showDuration": "500",
                                        "hideDuration": "1000",
                                        "timeOut": "5000",
                                        "extendedTimeOut": "1000",
                                        "showEasing": "swing",
                                        "hideEasing": "linear",
                                        "showMethod": "fadeIn",
                                        "hideMethod": "fadeOut"
                                    }
                                    setTimeout(function () {

                                        window.location.href = "/Dashboard/Dashboard"
                                    }, 3000);
                                   
                                }
                                else if (res.code != 200) {
                                    $("#imageloader").hide();
                                    $("#filecontents").show();

                                    Command: toastr["error"]("Invalid Sheet Data", " Failed")

                                    toastr.options = {
                                        "closeButton": false,
                                        "debug": false,
                                        "newestOnTop": false,
                                        "progressBar": true,
                                        "positionClass": "toast-top-center",
                                        "preventDuplicates": false,
                                        "onclick": null,
                                        "showDuration": "300",
                                        "hideDuration": "1000",
                                        "timeOut": "5000",
                                        "extendedTimeOut": "1000",
                                        "showEasing": "swing",
                                        "hideEasing": "linear",
                                        "showMethod": "fadeIn",
                                        "hideMethod": "fadeOut"
                                    }
                                }
                            },
                            failure: function (res) {
                                console.log(res);
                            },
                            err: function (res) {
                                console.log(res);
                            }

                        })
                    }
                    else {
                        return false;
                    }
                }

                else {
                    Command: toastr["error"]("File is not selected", " Failed")

                    toastr.options = {
                        "closeButton": false,
                        "debug": false,
                        "newestOnTop": false,
                        "progressBar": true,
                        "positionClass": "toast-top-center",
                        "preventDuplicates": false,
                        "onclick": null,
                        "showDuration": "300",
                        "hideDuration": "1000",
                        "timeOut": "5000",
                        "extendedTimeOut": "1000",
                        "showEasing": "swing",
                        "hideEasing": "linear",
                        "showMethod": "fadeIn",
                        "hideMethod": "fadeOut"
                    }
                }
            });

        });


    </script>
