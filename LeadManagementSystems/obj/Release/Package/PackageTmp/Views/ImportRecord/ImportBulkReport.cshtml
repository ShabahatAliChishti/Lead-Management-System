
@{
    ViewBag.Title = "ImportBulkReport";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Import Bulk Report</h1>
            </div>
           
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div>
                    <div class="card-header">

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div id="filecontents">
                            <form id="employeeform" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-sm-2">
                                        <!-- text input -->
                                        <div class="form-group">

                                            <label>Upload Excel File</label>
                                            <input type="file" id="uploadreportfile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" name="uploadFile" class="form-control" />
                                        </div>
                                    </div>

                                </div>



                                <div class="row">

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label></label>
                                            <input type="button" id="btnuploadfile" class="form-control btn btn-primary" value="Upload Excel File">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div id="imageloader" style="display:none;">
                            <img src="~/Content/dist/img/credit/loader.gif" />
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

@section MyScripts {
    <script type="text/javascript">



        $(document).ready(function () {



            $("#uploadreportfile").change(function () {
                var fileinput = document.getElementById("uploadreportfile");
                var filePath = fileinput.value;


                console.log(fileinput.files[0].type)
